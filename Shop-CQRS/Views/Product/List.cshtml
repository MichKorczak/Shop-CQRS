@model ProductListViewModel

@foreach (var p in Model.Products)
{

    <div>
        <div>
            <span class="badge badge-success">
                Ilość dostępnych egzęplarzy: @p.NumberOfIrems szt.
            </span>
        </div>
        <div class="card card-outline-secondary m-1 p-1">
            <div>
                <h4>
                    @p.Name <small>(@p.Category)</small>
                    <span class="badge badge-success" style="float: right">
                        <small>
                            @p.Price.ToString("c")
                        </small>
                    </span>
                </h4>
            </div>
            <div class="card-text p-1">
                @p.Description
            </div>
        </div>
    </div>
}

<div page-model="@Model.PagingInfo" page-action="List" page-classes-eneable="true"
     page-class="btn" page-class-normal="btn-secondary"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>
